    "version": "2.0.0",   
"tasks": [
    {
        "taskName": "Compile",
        "type": "shell",
        "windows": {
            "command": "source ~/.profile; mkdir -p build; ${env:eosf} build contract \"${workspaceFolder}\"/src -c"
        },
        "osx": {
            "command": "source ~/.bash_profile; mkdir -p build; ${eosf} build contract \"${workspaceFolder}\"/src -c"
        },
        "linux": {
            "command": "source ~/.profile; mkdir -p build; ${eosf} build contract \"${workspaceFolder}\"/src -c"
        },
        "presentation": {
            "reveal": "always",
            "panel": "dedicated"
        },
        "problemMatcher": [
        ]
    },
    {
        "taskName": "Build",
        "type": "shell",
        "windows": {
            "command": "source ~/.profile; mkdir -p build; ${env:eosf} generate abi \"${workspaceFolder}\"/src;${env:eosf} build contract \"${workspaceFolder}\"/src"
        },
        "osx": {
            "command": "source ~/.bash_profile; mkdir -p build; ${eosf} generate abi \"${workspaceFolder}\"/src; ${eosf} build contract \"${workspaceFolder}\"/src"
        },
        "linux": {
            "command": "source ~/.profile; mkdir -p build; ${eosf} generate abi \"${workspaceFolder}\"/src; ${eosf} build contract \"${workspaceFolder}\"/src"
        },
        "problemMatcher": [],
        "presentation": {
            "reveal": "always",
            "panel": "dedicated"
        },
        "group": {
            "kind": "build",
            "isDefault": true
        },
        "problemMatcher": [
        ]
    },
    {
        "taskName": "Unittest",
        "type": "shell",
        "windows": {
            "command": "source ~/.profile; python3 ./test/unittest1.py"
        },
        "osx": {
            "command": "source ~/.bash_profile; python3 ./test/unittest1.py"
        },
        "linux": {
            "command": "source ~/.profile; python3 ./test/unittest1.py"
        },
        "presentation": {
            "reveal": "always",
            "panel": "dedicated"
        },
        "problemMatcher": [
        ]
    },
    {
        "taskName": "Test",
        "type": "shell",
        "windows": {
            "command": "source ~/.profile; python3 ./test/test1.py \"${workspaceFolder}\""
        },
        "osx": {
